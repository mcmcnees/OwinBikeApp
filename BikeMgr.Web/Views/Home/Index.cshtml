@{
    ViewBag.Title = "Dashboard";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<p>Welcome to Bike Manager!</p>
<p style="font-size:10pt;">Statistics on bikes added to the system:</p>

<div class="container pb-3">
    <div class="row" >
        <div class="col"><canvas id="bikeBarChart"></canvas></div>
        <div class="col"><canvas id="bikePieChart"></canvas></div>
    </div>
    @*<br />*@
</div>

<script>
    // Bar Chart Static Sample
    window.chartColors = {
        red: 'rgb(255, 99, 132)',
        orange: 'rgb(255, 159, 64)',
        yellow: 'rgb(255, 205, 86)',
        green: 'rgb(75, 192, 192)',
        blue: 'rgb(54, 162, 235)',
        purple: 'rgb(153, 102, 255)',
        grey: 'rgb(201, 203, 207)'
    };

    var ctx = document.getElementById('bikeBarChart').getContext('2d');
    var color = Chart.helpers.color;
    var bikeBarChart = new Chart(ctx, {
        type: 'horizontalBar',
        data: {
            labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
            datasets: [{
                label: 'New Bikes',
                data: [4, 6, 5, 4, 2],
                backgroundColor: color(window.chartColors.blue).alpha(0.5).rgbString(),
                borderColor: window.chartColors.blue,
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }],
                xAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            },
            legend: {
                position: 'top',
            }
        }
    });
</script>

<script>
    // Pie chart Static Sample
    var ctx = document.getElementById('bikePieChart').getContext('2d');
    var color = Chart.helpers.color;
    var bikePieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
            datasets: [{
                label: 'New Bikes',
                data: [4, 6, 5, 4, 2],
                backgroundColor: [
                    window.chartColors.red,
                    window.chartColors.orange,
                    window.chartColors.yellow,
                    window.chartColors.green,
                    window.chartColors.blue,
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            title: {
                display: true,
                text: 'New Bikes',
                position: 'top'
            },
            legend: {
                position: 'top',
            }
        }
    });
</script>
